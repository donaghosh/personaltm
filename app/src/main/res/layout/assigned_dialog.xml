<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_bg"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/task_bg"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/move_to_completed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as complete"
        android:background="@drawable/complete_button"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/move_to_incomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as incomplete"
        android:background="@drawable/incomplete_button"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@drawable/delete_button"
        android:layout_margin="5dp"/>


</LinearLayout>
